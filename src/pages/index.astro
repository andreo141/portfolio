---
import Layout from '../layouts/Layout.astro';
import '@/styles/global.css';
import { Text } from "../components/ui/text";
import { ClientRouter } from 'astro:transitions';
import Navbar from "../components/ui/navbar.astro"

---

<Layout>
	<ClientRouter />
	<Navbar />
	<div id="introduction-wrapper" class="max-w-2xl m-30">
	<Text as="h1" className="text-4xl font-bold">Andreo Van Onckelen</Text>
	<Text as="h2" className="text-2xl font-bold mt-5 underline underline-offset-13">Full Stack Developer</Text>
	<Text className="text-xl font-thin mt-3">
		You've made it to my profile
	</Text>
	<Text className="text-xl font-thin">Welcome to basedworld</Text>
</div>
</Layout>
