---
import Navbar from "@/components/custom/navbar.astro";
import { Toaster } from "@/components/ui/toaster";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <meta name="generator" content={Astro.generator} />
    <title>Andreo Van Onckelen</title>
  </head>
  <body>
    <Navbar />
    <slot />
    <Toaster />
  </body>
</html>

<style>
  html,
  body {
    background-color: var(--bg);
    background-image: url("data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100' width='100%' height='100%'><defs><pattern id='grid' patternUnits='userSpaceOnUse' width='5' height='5'><circle cx='2' cy='2' r='0.1' fill='black'/></pattern></defs><rect width='100%' height='100%' fill='url(%23grid)' /></svg>");
    background-repeat: repeat;
    background-size: 100px 100px; /* Adjust grid size */
  }
</style>
